{
  "trailingComma": "es5",
  "printWidth": 100,
  "tabWidth": 2,
  "singleQuote": false,
  "jsxSingleQuote": false,
  "semi": true,
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "endOfLine": "auto",
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrderParserPlugins": [
    "classProperties",
    "typescript",
    "jsx"
  ],
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx",
        ".css",
        ".scss"
      ],
      "options": {
        "parser": "typescript"
      }
    },
    {
      "files": [
        "*.json",
        ".prettierrc"
      ],
      "options": {
        "parser": "json"
      }
    }
  ]
}
